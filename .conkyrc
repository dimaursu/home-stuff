alignment tr
background yes
border_width 2
cpu_avg_samples 2
default_color ffffff
default_outline_color black
default_shade_color black 
draw_borders no
draw_graph_borders no
draw_outline no 
draw_shades yes 
use_xft yes
xftfont Dejavu Sans Mono:size=11
gap_x 36
gap_y 36
net_avg_samples 2
no_buffers yes 
double_buffer yes
#out_to_console no
#out_to_stderr no
extra_newline no
own_window yes 
own_window_type override
#normal override desktop
own_window_transparent yes
own_window_hints undecorated,sticky,skip_taskbar,skip_pager,below
stippled_borders 8
update_interval 1
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
#minimum_size 1000 5

TEXT
$nodename
$kernel
Uptime: $uptime
RAM Usage: $mem/$memmax
$membar
$swapbar
Battery: ${battery_short} [${battery_time}]
${battery_bar }
$hr
#${cpugraph cpu0 42AE4A eeeeee}
CPU
${cpugraph cpu1 25,120 4a8beb eeeeee} $alignr${cpugraph cpu2 25,120 4a8beb eeeeee} 
Processes:$color $processes Running: $running_processes
$hr
PID  NAME   ${alignr} %  
${top pid 1} ${top name 1} ${top cpu 1}
${top pid 2} ${top name 2} ${top cpu 2}
${top pid 3} ${top name 3} ${top cpu 3}
$hr
${top_mem name 1} ${top_mem mem 1}
${top_mem name 2} ${top_mem mem 2}
${top_mem name 3} ${top_mem mem 3}
$hr
File systems:
/     ${fs_free /}/${fs_size /}   
/home ${fs_free /home}/${fs_size /home}
#/data ${fs_free /media/data}/${fs_size /media/data}
$hr
Disk I/O: ${diskio /dev/sda}
${diskiograph /dev/sda 25,240 4a8beb eeeeee}
$hr
Temperatures:
    CPU: ${hwmon temp 1} °C
    HDD: ${hddtemp /dev/sda} °C
HDAPS
${exec cat /sys/block/sda/device/unload_heads}
